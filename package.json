{
  "name": "monorepo",
  "private": true,
  "engines": {
    "node": ">=22.21.0",
    "pnpm": ">=10.19.0"
  },
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "dev": "turbo watch dev --continue",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "dev:_template": "turbo watch dev -F @monorepo/_template",
    "dev:portfolio": "turbo watch dev -F @monorepo/portfolio",
    "dev:assistant-ai": "turbo watch dev -F @monorepo/assistant-ai",
    "dev:mcp": "turbo watch dev -F @monorepo/mcp",
    "dev:documents": "turbo watch dev -F @monorepo/documents",
    "build:package:ui": "turbo run build:package -F @monorepo/ui",
    "build:package:hook": "turbo run build:package -F @monorepo/hook",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@monorepo/prettier-config": "workspace:*",
    "prettier": "catalog:",
    "turbo": "^2.5.8",
    "typescript": "catalog:"
  },
  "prettier": "@monorepo/prettier-config"
}
