{
  "name": "monorepo",
  "private": true,
  "engines": {
    "node": ">=22.21.0",
    "pnpm": ">=10.19.0"
  },
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "dev": "turbo watch dev --continue",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "dev:_template": "turbo watch dev -F @monorepo/_template",
    "build:_template": "turbo run build -F @monorepo/_template",
    "start:_template": "turbo run start -F @monorepo/_template",
    "dev:_portfolio": "turbo watch dev -F @monorepo/_portfolio",
    "build:_portfolio": "turbo run build -F @monorepo/_portfolio",
    "start:_portfolio": "turbo run start -F @monorepo/_portfolio",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@monorepo/prettier-config": "workspace:*",
    "prettier": "catalog:",
    "turbo": "^2.5.8",
    "typescript": "catalog:"
  },
  "prettier": "@monorepo/prettier-config"
}
