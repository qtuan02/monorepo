{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:_web-template": "turbo run dev -F @web/_web-template",
    "build:_web-template": "turbo run build -F @web/_web-template",
    "start:_web-template": "turbo run start -F @web/_web-template",
    "dev:web-portfolio": "turbo run dev -F @web/web-portfolio",
    "build:web-portfolio": "turbo run build -F @web/web-portfolio",
    "start:web-portfolio": "turbo run start -F @web/web-portfolio",
    "dev:_api-template-gin": "turbo run dev -F @api/_api-template-gin",
    "start:_api-template-gin": "turbo run start -F @api/_api-template-gin",
    "clean:_api-template-gin": "turbo run clean -F @api/_api-template-gin",
    "clean-all:_api-template-gin": "turbo run clean-all -F @api/_api-template-gin"
  },
  "devDependencies": {
    "prettier": "catalog:",
    "turbo": "^2.5.5",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.6.3",
  "engines": {
    "node": ">=22.15.0",
    "pnpm": ">=9.6.0"
  }
}
