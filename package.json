{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:_template": "turbo run dev -F @monorepo/_template",
    "build:_template": "turbo run build -F @monorepo/_template",
    "start:_template": "turbo run start -F @monorepo/_template",
    "dev:portfolio": "turbo run dev -F @monorepo/portfolio",
    "build:portfolio": "turbo run build -F @monorepo/portfolio",
    "start:portfolio": "turbo run start -F @monorepo/portfolio"
  },
  "devDependencies": {
    "prettier": "catalog:",
    "turbo": "^2.5.5",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.6.3",
  "engines": {
    "node": ">=22.15.0",
    "pnpm": ">=9.6.0"
  }
}
