  "exports": {
    "./libs/*": {
      "types": "./dist/src/libs/*.d.ts",
      "default": "./src/libs/*.ts"
    },
    "./components/*": {
      "types": "./dist/src/components/*.d.ts",
      "default": "./src/components/*.tsx"
    }
