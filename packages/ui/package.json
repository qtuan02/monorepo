{
  "name": "@monorepo/ui",
  "private": true,
  "type": "module",
  "license": "MIT",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    "./libs/*": {
      "types": "./dist/src/libs/*.d.ts",
      "default": "./src/libs/*.ts"
    },
    "./animate-ui/*": {
      "types": "./dist/src/animate-ui/*.d.ts",
      "default": "./src/animate-ui/*.tsx"
    },
    "./shadcn-ui/*": {
      "types": "./dist/src/shadcn-ui/*.d.ts",
      "default": "./src/shadcn-ui/*.tsx"
    },
    "./hooks/*": {
      "types": "./dist/src/hooks/*.d.ts",
      "default": "./src/hooks/*.ts"
    },
    "./utils/*": {
      "types": "./dist/src/utils/*.d.ts",
      "default": "./src/utils/*.ts"
    }
  },
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "ui-add": "pnpm dlx shadcn@latest add && prettier src --write --list-different"
  },
  "devDependencies": {
    "@monorepo/eslint-config": "workspace:*",
    "@monorepo/prettier-config": "workspace:*",
    "@monorepo/tailwind-config": "workspace:*",
    "@monorepo/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "eslint": "catalog:",
    "postcss": "catalog:",
    "typescript": "catalog:",
    "prettier": "catalog:"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-hover-card": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "catalog:",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "catalog:",
    "lucide-react": "catalog:",
    "motion": "catalog:",
    "react": "catalog:react19",
    "react-day-picker": "^9.8.1",
    "react-dom": "catalog:react19",
    "react-hook-form": "catalog:",
    "tailwind-merge": "catalog:",
    "vaul": "^1.1.2",
    "sonner": "catalog:"
  },
  "prettier": "@monorepo/prettier-config"
}
