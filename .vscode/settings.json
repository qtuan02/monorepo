{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.colorDecorators": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.runtime": "node",
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "prettier.ignorePath": ".gitignore",
  "tailwindCSS.classFunctions": ["cva", "cx", "cn"],
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.workingDirectories": [
    { "pattern": "apps/*/" },
    { "pattern": "packages/*/" },
    { "pattern": "toolings/*/" }
  ],
  "i18n-ally.enabledFrameworks": ["next-intl"],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.editor.preferEditor": true,
  "i18n-ally.sourceLanguage": "vi",
  "i18n-ally.displayLanguage": "vi",
  // "i18n-ally.localesPaths": ["apps/_template/messages"],
  "i18n-ally.localesPaths": ["apps/portfolio/messages"],
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(((?:[^()]|\\([^()]*\\))*)\\)", "[\"'`]?([^\"'`]+)[\"'`]?"],
    ["cn\\(((?:[^()]|\\([^()]*\\))*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "tailwindCSS.experimental.configFile": {
    "packages/ui/src/globals.css": "packages/ui/**",
    "apps/_template/src/app/[locale]/globals.css": "apps/_template/**",
    "apps/portfolio/src/app/[locale]/globals.css": "apps/portfolio/**"
  }
}
